@page
@using Logic.Entities;
@model Library_Of_Babel_Web_Application.Pages.FavouriteBookPageModel
@{
    <link href="~/css/IndexStyle.css" rel="stylesheet" type="text/css" />
    Layout = "";
}

<body>
    <div class="header">
        <a class="logo">Your Favourite Books in one place</a>
        <div class="header-right">
            <a href="/Index">Home Page</a>
                <a href="/RecommendedPage?name=ByGenre">See recommended books</a>
                <a href="/RecommendedPage?name=ByRating">See top rated books</a>
                <a href="AccountInformationPage">Account Information</a>
        </div>
    </div>

    <div class="parent">
        @if (Model.favouriteBooks.Count > 0)
        {
            @foreach (FavouriteBook book in Model.favouriteBooks)
            {
                <form method="post">
                    <div class="div1">
                        <div class="book-image">
                            <button type="submit" class="framed"><img class="framed" src="data:image/jpg;base64,@System.Convert.ToBase64String(book.Book.BookImage)" /></button>
                        </div>
                        <div class="book-title">
                            <span>@book.Book.BookTitle</span>
                        </div>
                        <div class="add-to-favorites">
                            <input asp-for="bookObject.BookId" type="hidden" value="@book.Book.BookId " />
                        </div>
                    </div>
                </form>
            }
        }
        else
        {
           <h1>You have not added books to your favourite list yet</h1>
        }
    </div>
    </div>
</body>
